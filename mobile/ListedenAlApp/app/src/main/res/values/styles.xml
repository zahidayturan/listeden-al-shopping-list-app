<resources>
    <style name="LoginRegisterButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="backgroundTint">@color/black_700</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="GoogleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="icon">@drawable/ic_google</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">16dp</item>
        <item name="iconTintMode">multiply</item>
        <item name="strokeColor">@color/black_700</item>
        <item name="strokeWidth">1dp</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="RoundIconButton">
        <item name="android:background">@drawable/round_icon_button_background</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>